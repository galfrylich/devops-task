pipeline {
    agent any 
    environment {
        AmazonRegistry = '314525640319.dkr.ecr.us-west-1.amazonaws.com/gal-repo'
        GitURL = 'https://github.com/galfrylich/devops-task'
        GitcredentialsId = 'be180531-f264-44fe-897e-818a60362759'
    }
    stages {
        stage('Git Checkout') {
            steps {
                echo '# # # # # STAGE 1 - Git checkout # # # # #'
                checkout([$class: 'GitSCM',
                 branches: [[name: '*/main']], 
                 extensions: [], 
                 userRemoteConfigs: [[credentialsId: "$GitcredentialsId",
                 url: "$GitURL"]]])
                 sh 'git branch -a'
                 sh 'ls -al'

            }
        }
        stage('Build docker image') {
            steps {
                echo '# # # # # STAGE 2 - Build Image # # # # #'
                script{
                    dockerImage = docker.build("$AmazonRegistry:latest", "-f hello-world/Dockerfile .")


                }
            }
        }
        stage('push image to erc') {
            steps {
                script{
                    echo '# # # # # STAGE 3 - Push Image # # # # #'
                    sh 'docker push $AmazonRegistry:latest'
                    }
                }
            }
        }
        
  
}